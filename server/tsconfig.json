{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
